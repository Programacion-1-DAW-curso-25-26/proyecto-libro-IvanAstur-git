public class Robot {

        private int id;
        private String modelo;

        private static int contadorRobots = 0;

        public Robot(String modelo) {
            contadorRobots++;
            this.id = contadorRobots;
            this.modelo = modelo;
        }

        public void mostrarInfo() {
            System.out.println("Robot modelo " + modelo + " con ID " + id);
        }

        public static int getContadorRobots() {
            return contadorRobots;
        }
    }


public class Main {
    public static void main(String[] args) {

        Robot r1 = new Robot("Raven");
        Robot r2 = new Robot("Rusty");
        Robot r3 = new Robot("Ash");

        r1.mostrarInfo();
        r2.mostrarInfo();
        r3.mostrarInfo();

        System.out.println("Total de robots fabricados: " + Robot.getContadorRobots());
    }
}
